        // Funci√≥n para obtener o inicializar el progreso
        function getProgress() {
            let progress = JSON.parse(localStorage.getItem('examProgress')) || { sections: {} };
            
            // Inicializar todas las secciones si no existen
            for (let i = 1; i <= 14; i++) {
                if (!progress.sections[i]) {
                    progress.sections[i] = {
                        completed: false,
                        score: 0,
                        answered: 0,
                        total: Object.keys(correctAnswers[i] || {}).length
                    };
                }
            }
            
            return progress;
        }

        // Funci√≥n para guardar el progreso
        function saveProgress(progress) {
            localStorage.setItem('examProgress', JSON.stringify(progress));
            updateProgress();
        }

        // Funci√≥n para actualizar la visualizaci√≥n del progreso
        function updateProgress() {
            const progress = getProgress();
            
            // Actualizar indicadores de secciones
            for (let i = 1; i <= 14; i++) {
                const indicator = document.getElementById(`progress-s${i}`);
                if (indicator && progress.sections[i]) {
                    if (progress.sections[i].completed) {
                        indicator.classList.add('completed');
                    } else {
                        indicator.classList.remove('completed');
                    }
                }
            }
            
            // Calcular estad√≠sticas generales
            let completedSections = 0;
            let totalScore = 0;
            let totalQuestions = 0;
            let answeredQuestions = 0;
            
            for (let i = 1; i <= 14; i++) {
                if (progress.sections[i]) {
                    if (progress.sections[i].completed) {
                        completedSections++;
                        totalScore += progress.sections[i].score;
                    }
                    answeredQuestions += progress.sections[i].answered;
                    totalQuestions += progress.sections[i].total;
                }
            }
            
            // Actualizar estad√≠sticas en la p√°gina de inicio
            const completedSectionsEl = document.getElementById('completed-sections');
            if (completedSectionsEl) {
                completedSectionsEl.textContent = completedSections;
            }
            
            // Actualizar barra de progreso en el header
            const progressPercent = totalQuestions > 0 ? Math.round((answeredQuestions / totalQuestions) * 100) : 0;
            const progressText = document.getElementById('progress-text');
            const progressFill = document.getElementById('progress-fill');
            
            if (progressText && progressFill) {
                progressText.textContent = `${progressPercent}%`;
                progressFill.style.width = `${progressPercent}%`;
            }
        }

        // Funci√≥n para enviar una secci√≥n
        function submitSection(sectionNumber) {
            const form = document.getElementById(`exam-form-section${sectionNumber}`);
            const resultsContainer = document.getElementById(`results-section${sectionNumber}`);
            const scoreElement = document.getElementById(`score-section${sectionNumber}`);
            const detailsElement = document.getElementById(`results-details-section${sectionNumber}`);
            
            if (!form || !resultsContainer) return;
            
            const sectionAnswers = correctAnswers[sectionNumber];
            let score = 0;
            let totalQuestions = Object.keys(sectionAnswers).length;
            let resultsHTML = "";
            
            // Calcular puntuaci√≥n
            for (const [questionName, correctAnswer] of Object.entries(sectionAnswers)) {
                const selectedOption = form.querySelector(`input[name="${questionName}"]:checked`);
                const isCorrect = selectedOption && selectedOption.value === correctAnswer;
                
                if (isCorrect) {
                    score++;
                    resultsHTML += `
                    <div class="correct-answer">
                        <div class="correct">Pregunta ${questionName.substring(1)}: Correcta</div>
                        <div style="margin-top: 5px; font-size: 14px;"><strong>Respuesta correcta:</strong> ${answerTexts[sectionNumber][questionName]}</div>
                    </div>
                    `;
                } else {
                    const userAnswer = selectedOption ? selectedOption.value : "No respondida";
                    resultsHTML += `
                    <div class="incorrect-answer">
                        <div class="incorrect">Pregunta ${questionName.substring(1)}: Incorrecta</div>
                        <div style="margin-top: 5px; font-size: 14px;"><strong>Respuesta correcta:</strong> ${answerTexts[sectionNumber][questionName]}</div>
                    </div>
                    `;
                }
            }
            
            // Actualizar progreso
            const progress = getProgress();
            progress.sections[sectionNumber] = {
                completed: true,
                score: score,
                answered: totalQuestions,
                total: totalQuestions
            };
            saveProgress(progress);
            
            // Mostrar resultados
            scoreElement.textContent = `Puntuaci√≥n: ${score}/${totalQuestions}`;
            detailsElement.innerHTML = resultsHTML;
            resultsContainer.style.display = 'block';
            form.style.display = 'none';
            
            // Desplazarse a los resultados
            resultsContainer.scrollIntoView({ behavior: 'smooth' });
        }

        // Funci√≥n para reintentar una secci√≥n
        function retrySection(sectionNumber) {
            const form = document.getElementById(`exam-form-section${sectionNumber}`);
            const resultsContainer = document.getElementById(`results-section${sectionNumber}`);
            
            if (form && resultsContainer) {
                // Limpiar formulario
                const inputs = form.querySelectorAll('input[type="radio"]');
                inputs.forEach(input => input.checked = false);
                
                // Ocultar resultados y mostrar formulario
                resultsContainer.style.display = 'none';
                form.style.display = 'block';
                
                // Actualizar progreso
                const progress = getProgress();
                progress.sections[sectionNumber].completed = false;
                progress.sections[sectionNumber].score = 0;
                saveProgress(progress);
                
                // Desplazar al inicio del formulario
                form.scrollIntoView({ behavior: 'smooth' });
            }
        }

        // Inicializaci√≥n
        document.addEventListener('DOMContentLoaded', function() {
            // Mostrar p√°gina de inicio por defecto
            showSection('home');
            
            // Cargar progreso
            updateProgress();
            
            // Restaurar respuestas guardadas
            restoreAnswers();
            
            console.log("Sistema de examen cargado correctamente");
            console.log("14 secciones disponibles con 108 preguntas en total");
        });

        // Funci√≥n para restaurar respuestas guardadas
        function restoreAnswers() {
            const progress = getProgress();
            
            for (let sectionNum = 1; sectionNum <= 14; sectionNum++) {
                const sectionProgress = progress.sections[sectionNum];
                if (sectionProgress && sectionProgress.userAnswers) {
                    const form = document.getElementById(`exam-form-section${sectionNum}`);
                    if (form) {
                        Object.entries(sectionProgress.userAnswers).forEach(([questionName, answer]) => {
                            const input = form.querySelector(`input[name="${questionName}"][value="${answer}"]`);
                            if (input) {
                                input.checked = true;
                            }
                        });
                    }
                }
            }
        }

        // Guardar respuestas autom√°ticamente al cambiar opciones
        document.addEventListener('change', function(event) {
            if (event.target.type === 'radio') {
                const questionName = event.target.name;
                const sectionMatch = questionName.match(/q(\d+)/);
                
                if (sectionMatch) {
                    const questionNum = parseInt(sectionMatch[1]);
                    let sectionNum = 1;
                    
                    // Determinar a qu√© secci√≥n pertenece la pregunta
                    if (questionNum >= 1 && questionNum <= 4) sectionNum = 1;
                    else if (questionNum >= 5 && questionNum <= 22) sectionNum = 2;
                    else if (questionNum >= 23 && questionNum <= 25) sectionNum = 3;
                    else if (questionNum >= 26 && questionNum <= 29) sectionNum = 4;
                    else if (questionNum === 30) sectionNum = 5;
                    else if (questionNum >= 31 && questionNum <= 83) sectionNum = 6;
                    else if (questionNum === 84) sectionNum = 7;
                    else if (questionNum === 85) sectionNum = 8;
                    else if (questionNum >= 86 && questionNum <= 88) sectionNum = 9;
                    else if (questionNum >= 89 && questionNum <= 93) sectionNum = 10;
                    else if (questionNum >= 94 && questionNum <= 96) sectionNum = 11;
                    else if (questionNum >= 97 && questionNum <= 99) sectionNum = 12;
                    else if (questionNum >= 100 && questionNum <= 105) sectionNum = 13;
                    else if (questionNum >= 106 && questionNum <= 108) sectionNum = 14;
                    
                    // Guardar respuesta
                    const form = document.getElementById(`exam-form-section${sectionNum}`);
                    if (form) {
                        const progress = getProgress();
                        if (!progress.sections[sectionNum].userAnswers) {
                            progress.sections[sectionNum].userAnswers = {};
                        }
                        
                        const selectedOption = form.querySelector(`input[name="${questionName}"]:checked`);
                        if (selectedOption) {
                            progress.sections[sectionNum].userAnswers[questionName] = selectedOption.value;
                            saveProgress(progress);
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>
